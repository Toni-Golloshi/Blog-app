<html>
	<head>
		<title>Sign up</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
  </head>
	<body class="signup">

    <nav class="navbar navbar-expand-lg navbar navbar-light" style="background-color: #b5cee9;">
      <div class="container">
        <a class="navbar-brand" href="#">
      <img src="/img/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
      Fakebook
    </a>

        <ul class="nav-item navbar-nav ">
          <li class="nav-item">
            <a class="nav-link" href="/">Sign in</a>
          </li>
        </ul>
    </div>
    </nav>

    <div class="break"></div>
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-4 col-sm-0"></div>
            <div class="col-md-4 col-sm-6 col-xs-1 shade">
  		<form action='/signup', method='POST', autocomplete='off' id='form'>
        <div class="form-group height">
          <label for="exampleInputEmail1">Choose a username </label>
  		    <input type='text', name='username', placeholder="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        </div>
        <div class="form-group">
  		      <label for="exampleInputEmail1">Your email</label>
  		    <input type='text', name='email', placeholder="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        </div>
        <div class="form-group">
  		      <label>Choose a password</label>
            <input type='password', name='password', placeholder="Password" class="form-control" id="exampleInputPassword1" required>
        </div>
				<div class="form-group">
            <label>Confirm password</label>
            <input type='password', name='confirmpassword', placeholder="Password" class="form-control" id="exampleInputPassword1" required minlength="8">
        </div>
        <input type="submit" value="Submit" class="space btn btn-info">
  		</form>
    </div>
  <div class="col-md-4 col-sm-0"></div>
</div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
